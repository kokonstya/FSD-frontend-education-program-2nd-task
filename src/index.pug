include ./components/button/button
include ./components/input/input
include ./components/checkbox-button/checkbox-button
include ./components/radio-button/radio-button
include ./components/toggle/toggle
include ./components/like-button/like-button
include ./components/rate-button/rate-button
include ./components/dropdown/dropdown
include components/select-js/select-js
include components/counter/counter
include components/header/header
doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        title FSD-frontend-education-program-2nd-task
        link(rel="stylesheet" type="text/css" href="main.css")
        link(rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/icon?family=Material+Icons")
    body
    .wrapper
        +header({isLogined: false, nav: ["Home", "About us", "Services", "Careers", "News", "Documentation"]})
        +header({isLogined: true, nav: ["Home", "About us", "Services", "Careers", "News", "Documentation"]})
        +counter({})
        +select-js({selectors: [{value: "1", select: "Спальни"}, {value: "2", select: "Кухни"}, {value: "3", select: "Ванные комнаты"}]})
        +rate-button({count: "4"})
        +rate-button({count: "1"})
        +rate-button({count: "2"})
        +rate-button({count: "5"})
        +like-button({count: "2"})
        +like-button({count: "12", isActive: true})
        +toggle({text: "Получать спецпредложения"})
        +radio-button({name: "sex", radioOptions: ["Мужчина", "Женщина"]})
        +checkbox-button({text: "Можно курить"})
        +checkbox-button({text: "Можно с питомцами"})
        +checkbox-button({text: "Можно пригласить гостей (до 10 человек)"})
    script(src="./app.js")
