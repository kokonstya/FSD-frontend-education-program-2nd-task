mixin rate-button(options)
    -
        var rateButtonClassName = "rate-button"
        rateButtonClassName += options.isActive ? " like-button-active" : ""
        var rateButtonIcon = options.isActive ? "grade" : "grade_border"
    .rate-button-wrapper
        - for (var x = 0; x < options.count; x++)
            button(class = rateButtonClassName)
                svg(xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 0 24 24" width="24")
                    defs
                        linearGradient(id="Gradient" x1="0" x2="0" y1="0" y2="1")
                            stop(offset="0%" stop-color="#BC9CFF")
                            stop(offset="100%" stop-color="#8BA4F9")
